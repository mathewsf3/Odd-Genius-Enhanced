# Node options to fix crypto issues with newer Node.js versions and disable deprecation warnings
# NODE_OPTIONS has been moved to package.json scripts for better memory management

# API URL
REACT_APP_API_URL=http://localhost:5000/api

# Soccer API Keys
REACT_APP_ALLSPORTS_API_KEY=your_allsports_api_key_here
REACT_APP_API_FOOTBALL_KEY=your_api_football_key_here

# OpenAI API Key for Odd Genius AI Chat
# Get your API key from: https://platform.openai.com/api-keys
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Feature flags
REACT_APP_ENABLE_DATA_PREFETCH=true
REACT_APP_USE_CACHE=true
SKIP_PREFLIGHT_CHECK=true

# Production URL
REACT_APP_PRODUCTION_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Disable source map generation warnings
GENERATE_SOURCEMAP=false

# Increase memory limit for build process
# This is handled in package.json scripts

# Disable Open SSL legacy provider warnings
# This is handled in package.json scripts

# Enable experimental features for React
REACT_APP_EXPERIMENTAL_FEATURES=false

# Cache settings
REACT_APP_CACHE_TTL=300000
REACT_APP_ENABLE_OFFLINE_MODE=false
